<Window x:Class="wcode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        Title="wcode" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        WindowStyle="None" AllowsTransparency="False" ResizeMode="CanResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Background="#FF2D2D30" Height="32" BorderBrush="#FF464647" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left: Menu and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Menu -->
                    <Menu Background="Transparent" VerticalAlignment="Center">
                        <Menu.Resources>
                            <Style TargetType="MenuItem">
                                <Setter Property="Background" Value="#FF2D2D30"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="0,12"/>
                                <Style.Triggers>
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter Property="Background" Value="#FF007ACC"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsSubmenuOpen" Value="True">
                                        <Setter Property="Background" Value="#FF007ACC"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <!-- Special handling for top-level menu items -->
                                    <Trigger Property="Role" Value="TopLevelHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Padding" Value="16,4"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Menu.Resources>
                        <MenuItem Header="_File">
                            <MenuItem Header="_Open File..." Click="OpenFileMenuItem_Click" InputGestureText="Ctrl+O"/>
                            <MenuItem Header="Open _Folder..." Click="OpenFolderMenuItem_Click" InputGestureText="Ctrl+Shift+O"/>
                            <MenuItem Header="Change _Project..." Click="ChangeProjectMenuItem_Click" InputGestureText="Ctrl+Shift+P"/>
                            <MenuItem Header="E_xit" Click="ExitMenuItem_Click" InputGestureText="Alt+F4"/>
                        </MenuItem>
                        <MenuItem Header="_View">
                            <MenuItem Header="New _Terminal Tab" Click="NewTerminalMenuItem_Click" InputGestureText="Ctrl+T"/>
                            <MenuItem Header="New _Directory Tab" Click="NewDirectoryMenuItem_Click" InputGestureText="Ctrl+D"/>
                        </MenuItem>
                    </Menu>
                </StackPanel>
                
                <!-- Center: Title (draggable area) -->
                <TextBlock Grid.Column="1" Name="TitleText" Text="wcode" 
                          Foreground="White" FontWeight="SemiBold" FontSize="13"
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"/>
                
                <!-- Right: Window Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Name="MinimizeButton" Content="ðŸ—•" Width="46" Height="32" 
                            Background="Transparent" BorderThickness="0" Foreground="White"
                            Click="MinimizeButton_Click" FontSize="10">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF404040"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Name="MaximizeButton" Content="ðŸ—–" Width="46" Height="32" 
                            Background="Transparent" BorderThickness="0" Foreground="White"
                            Click="MaximizeButton_Click" FontSize="10">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF404040"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Name="CloseButton" Content="ðŸ—™" Width="46" Height="32" 
                            Background="Transparent" BorderThickness="0" Foreground="White"
                            Click="CloseButton_Click" FontSize="10">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE81123"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="200"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- File Tree Panel -->
        <Border Grid.Column="0" Background="#FF2D2D30" BorderBrush="#FF464647" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Toolbar -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF3F3F46" Height="30">
                    <Button Name="OpenFolderButton" Content="ðŸ“" Width="30" Height="30" 
                            Background="Transparent" BorderThickness="0" Foreground="White"
                            Click="OpenFolderButton_Click" ToolTip="Open Folder"/>
                </StackPanel>
                
                <!-- File Tree -->
                <TreeView Name="FileTreeView" Grid.Row="1" Background="#FF2D2D30" 
                         Foreground="White" BorderThickness="0"
                         SelectedItemChanged="FileTreeView_SelectedItemChanged">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FF007ACC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>
            </Grid>
        </Border>
        
        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="5" Background="#FF464647" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        
        <!-- Code Editor Panel -->
        <Grid Grid.Column="2" Background="#FF1E1E1E">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Tab Control -->
            <TabControl Name="FileTabControl" Grid.Row="0" Grid.RowSpan="2" Background="#FF1E1E1E">
                <TabControl.Style>
                    <Style TargetType="TabControl">
                        <Setter Property="Background" Value="#FF1E1E1E"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </TabControl.Style>
                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="#FF2D2D30"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="12,6"/>
                        <Setter Property="Margin" Value="0,0,1,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Grid>
                                        <Border Name="Border" Background="{TemplateBinding Background}" 
                                                BorderBrush="#FF464647" BorderThickness="0,0,0,1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0" ContentSource="Header" 
                                                                HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                                Margin="{TemplateBinding Padding}"/>
                                                <Button Grid.Column="1" Name="CloseButton" Content="Ã—" 
                                                        Width="16" Height="16" Margin="4,0,4,0"
                                                        Background="Transparent" BorderThickness="0" 
                                                        Foreground="White" FontSize="12" FontWeight="Bold"
                                                        Click="CloseTab_Click" Tag="{Binding RelativeSource={RelativeSource TemplatedParent}}"/>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#FF007ACC"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#FF3F3F46"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.ItemContainerStyle>
                
                <!-- Welcome Tab -->
                <TabItem Header="Welcome" Name="WelcomeTab">
                    <Grid Background="#FF1E1E1E">
                        <TextBlock Text="Select a file from the tree to open it in a new tab" 
                                   Foreground="White" FontSize="16" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        </Grid>
    </Grid>
</Window>