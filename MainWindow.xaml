<Window x:Class="SourceCodeViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        Title="Source Code Viewer" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="200"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- File Tree Panel -->
        <Border Grid.Column="0" Background="#FF2D2D30" BorderBrush="#FF464647" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Toolbar -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF3F3F46" Height="30">
                    <Button Name="OpenFolderButton" Content="📁" Width="30" Height="30" 
                            Background="Transparent" BorderThickness="0" Foreground="White"
                            Click="OpenFolderButton_Click" ToolTip="Open Folder"/>
                </StackPanel>
                
                <!-- File Tree -->
                <TreeView Name="FileTreeView" Grid.Row="1" Background="#FF2D2D30" 
                         Foreground="White" BorderThickness="0"
                         SelectedItemChanged="FileTreeView_SelectedItemChanged">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FF007ACC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>
            </Grid>
        </Border>
        
        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="5" Background="#FF464647" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        
        <!-- Code Editor Panel -->
        <Grid Grid.Column="2" Background="#FF1E1E1E">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- File Path Bar -->
            <Border Grid.Row="0" Background="#FF3F3F46" Height="25" BorderBrush="#FF464647" BorderThickness="0,0,0,1">
                <TextBlock Name="FilePathTextBlock" Text="No file selected" 
                          Foreground="White" VerticalAlignment="Center" Margin="10,0"/>
            </Border>
            
            <!-- Code Editor -->
            <avalonEdit:TextEditor Name="CodeEditor" Grid.Row="1" 
                                  Background="#FF1E1E1E" Foreground="White"
                                  FontFamily="Consolas" FontSize="12" 
                                  IsReadOnly="True" ShowLineNumbers="True"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto"/>
        </Grid>
    </Grid>
</Window>